<ComplexInheritance>

    <!-- before type -->
    <type baseAttribute="baseAttrValue" subAttribute="subAttrValue"
          xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
          xmlns:trc="http://k5.eu/tr/complex"
          xsi:type="trc:SubType">
        <!-- before base value -->
        <baseElement>baseValue</baseElement>
        <!-- before subvalue -->
        <subElement>subValue</subElement>
        <!-- after subvalue -->
    </type>

</ComplexInheritance>